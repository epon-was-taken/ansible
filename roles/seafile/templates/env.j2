COMPOSE_FILE='seafile-server.yml,seadoc.yml,caddy.yml'
COMPOSE_PATH_SEPARATOR=','

SEAFILE_IMAGE={{ seafile_sever_image }}
SEAFILE_DB_IMAGE={{ seafile_db_image }}
SEAFILE_MEMCACHED_IMAGE={{ seafile_memcached_image }}
SEAFILE_CADDY_IMAGE={{ seafile_caddy_image }}

SEAFILE_VOLUME=/opt/seafile/seafile-data
SEAFILE_MYSQL_VOLUME=/opt/seafile/seafile-mysql/db
SEAFILE_CADDY_VOLUME=/opt/seafile/seafile-caddy

SEAFILE_MYSQL_DB_HOST=db
INIT_SEAFILE_MYSQL_ROOT_PASSWORD={{ seafile_mysql_root_password }}
SEAFILE_MYSQL_DB_USER=seafile
SEAFILE_MYSQL_DB_PASSWORD={{ seafile_mysql_password }}

TIME_ZONE=Etc/UTC

JWT_PRIVATE_KEY={{ seafile_jwt_private_key }}

SEAFILE_SERVER_HOSTNAME={{ seafile_fqdn | default(ansible_fqdn, true) }}
SEAFILE_SERVER_PROTOCOL=https

INIT_SEAFILE_ADMIN_EMAIL={{ seafile_admin_email }}
INIT_SEAFILE_ADMIN_PASSWORD={{ seafile_admin_password }}

SEADOC_IMAGE={{ seafile_seadoc_image }}
SEADOC_VOLUME=/opt/seafile/seadoc-data

ENABLE_SEADOC=true

NOTIFICATION_SERVER_IMAGE={{ seafile_notification_server_image }}
NOTIFICATION_SERVER_VOLUME=/opt/seafile/notification-data

USE_GO_FILESERVER=true
